<?xml version="1.0" encoding="UTF-8"?>    
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"     
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"     
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee    
             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"     
         version="3.1">    
  
    <!-- CustomerServlet の設定 -->  
    <servlet>    
        <servlet-name>CustomerServlet</servlet-name>    
        <servlet-class>com.example.servlet.CustomerServlet</servlet-class>    
    </servlet>    
    <servlet-mapping>    
        <servlet-name>CustomerServlet</servlet-name>    
        <url-pattern>/CustomerServlet</url-pattern>    
    </servlet-mapping>    
  
    <!-- HearingFormServlet の設定 -->  
    <servlet>    
        <servlet-name>HearingFormServlet</servlet-name>    
        <servlet-class>com.example.servlet.HearingFormServlet</servlet-class>    
    </servlet>    
    <servlet-mapping>    
        <servlet-name>HearingFormServlet</servlet-name>    
        <url-pattern>/HearingFormServlet</url-pattern>    
    </servlet-mapping>    
  
    <!-- HearingServlet の設定 -->  
    <servlet>    
        <servlet-name>HearingServlet</servlet-name>    
        <servlet-class>com.example.servlet.HearingServlet</servlet-class>    
    </servlet>    
    <servlet-mapping>    
        <servlet-name>HearingServlet</servlet-name>    
        <url-pattern>/HearingServlet</url-pattern>    
    </servlet-mapping>    
  
    <!-- RegisterCustomerServlet の設定 -->  
    <servlet>    
        <servlet-name>RegisterCustomerServlet</servlet-name>    
        <servlet-class>com.example.servlet.RegisterCustomerServlet</servlet-class>    
    </servlet>    
    <servlet-mapping>    
        <servlet-name>RegisterCustomerServlet</servlet-name>    
        <url-pattern>/RegisterCustomerServlet</url-pattern>    
    </servlet-mapping>    
  
    <!-- ViewHearingsServlet の設定 -->  
    <servlet>    
        <servlet-name>ViewHearingsServlet</servlet-name>    
        <servlet-class>com.example.servlet.ViewHearingsServlet</servlet-class>    
    </servlet>    
    <servlet-mapping>    
        <servlet-name>ViewHearingsServlet</servlet-name>    
        <url-pattern>/ViewHearingsServlet</url-pattern>    
    </servlet-mapping>    
  
    <!-- Welcome ファイルの設定 -->    
    <welcome-file-list>    
        <welcome-file>index.jsp</welcome-file>    
    </welcome-file-list>    
  
</web-app>
